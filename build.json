{
    "compiler":
    {
        "command": "g++ -std=c++23 -c",
        "options": "",
        "include-pathes":
        [
            "include"
        ]
    },
    "linker":
    {
        "command": "g++ -static-libgcc -static-libstdc++",
        "options": "",
        "libraries-pathes":
        [
            "lib"
        ],
        "static-libraries-files-pathes":
        [
            "lib/libglfw3.a",
            "lib/libglad.a",
            "lib/libreactphysics3d.a"
        ],
        "libraries":
        [
            "opengl32",
            "gdi32",
            "OpenAL32",
            "soft_oal"
        ],
        "output-file-path": "build/main.exe"
    },
    "general":
    {
        "temporary-folder": ".tmp",
        "copy-files":
        [
            "lib/soft_oal.dll",
            "lib/OpenAL32.dll"
        ],
        "copy-folders":
        [

        ],
        "copy-destination-folder": "build"
    },
    "project":
    {
        "files":
        [
            "src/engine/external/openal.cpp",
            "src/engine/external/opengl.cpp",

            "src/engine/resources/Mesh.cpp",
            "src/engine/resources/Texture.cpp",
            "src/engine/resources/ShaderProgram.cpp",

            "src/engine/Engine.cpp",
            "src/engine/ResourceManager.cpp",
            "src/engine/Transform.cpp",

            "src/main.cpp"
        ]
    }
}